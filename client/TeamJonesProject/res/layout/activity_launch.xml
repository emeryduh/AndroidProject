<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alizarin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.comp313.LaunchActivity" >

    <TextView
        android:id="@+id/tvLogoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/launch_logotext_top"
        android:text="@string/launch_header_text"
        android:textColor="@color/white"
        android:textSize="@dimen/launch_logotext_size" />

    <TextView
        android:id="@+id/tvLogoMoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLogoText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/launch_logomoto_top"
        android:text="@string/launch_logo_text"
        android:textColor="@color/white"
        android:textSize="@dimen/launch_logomoto_size" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="@dimen/launch_login_width"
        android:layout_height="@dimen/launch_login_height"
        android:layout_below="@+id/tvLogoMoto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/launch_login_top"
        android:background="@color/buttonbackground"
        android:onClick="callIntent"
        android:text="@string/launch_btnLoginp_text" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="@dimen/launch_login_width"
        android:layout_height="@dimen/launch_login_height"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/launch_signup_top"
        android:background="@color/buttonbackground"
        android:onClick="callIntent"
        android:text="@string/launch_btnsignup_text" />

</RelativeLayout>